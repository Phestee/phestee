extends ../leftPanel/xl
block pannel
  // content start
  .col-7.mt-5.pt-5.mb-5(ng-controller="editProfileController" ng-init="loadDataUser()")
    .row.rounded.justify-content-center
      .col-12
        h6.text-uppercase.phtext-muted.font-weight-bold.my-auto
          i.fas.fa-edit
          |  Editar Perfil
        .dropdown-divider(role='separator')
        form
          .form-row.my-auto
            .col-8.mt-3.d-flex.justify-content-start
              small.my-auto
                p.p.my-auto Avatar de Perfil
              img.ml-5.my-auto.rounded-circle(src='../../../../img/{{fileImage}}' width='50', height='50')
              label.btn.btn-outline.btn-sm.rounded-0.ml-3.my-auto
                small Subir una foto
                input(type='file' style='display: none;' ng-model="imgProfile" name="imgProfile" accept="image/*" ngf-max-size='2MB' ngf-model-invalid='errorFile'  ngf-select='' ng-change="checknameimage()")  
                small
                img(ng-show="imgProfile" style="width: 50px; height: 50px;" ngf-thumbnail="imgProfile") 
                . 
                  {{imgProfile.name}}
          .form-row.my-auto
            .col-12.mt-3.d-flex.justify-content-start
              small.my-auto
                p.p.my-auto Nombre completo
              input#iptName.form-control.phfield.form-control-sm.ml-3.rounded-0.border-top-0.border-left-0.border-right-0(type='text', placeholder='' ng-model="iptName")
          .form-row.my-auto
            .col-12.mt-3.d-flex.justify-content-start
              small.my-auto
                p.p.my-auto Nombre de Usuario
              input#iptUserName.form-control.phfield.form-control-sm.ml-3.rounded-0.border-top-0.border-left-0.border-right-0(type='text' placeholder='' ng-model="iptUserName")                            
              small.my-auto
              div
                input(type="button" value="Revisar usuario" ng-click="checkusername()")                              
          .row.my-auto
            .col-12.mt-4.d-flex.justify-content-start
              small.p.my-auto
              div
                span(ng-show="usernamenotavailable") El usuario no se encuentra disponible.
                span(ng-show="usernameavailable") El usuario se encuentra disponible.
            .col-12.mt-2  
              small.my-auto
                p.p.phtext-muted.my-auto www.phestee.com/                        
          .row.my-auto
            .col-12.mt-4.d-flex.justify-content-start
              small.p.my-auto Género
              select#slcGender.custom-select.custom-select-sm.ml-2.rounded-0.border-top-0.border-left-0.border-right-0(ng-model="slcGender")                
                option(value='Hombre') Hombre
                option(value='Mujer') Mujer
                option(value='Prefiero no decirlo') Prefiero no decirlo
              small.ml-5.p.my-auto En qué Estado vives
              select#slcStateProfile.custom-select.custom-select-sm.rounded-0.ml-2.border-top-0.border-left-0.border-right-0(ng-model="slcStateProfile" ng-options="obj.value as obj.label for obj in slcStateProfileItems" ng-change="changecity()")                
              small.ml-5.p.my-auto En qué Ciudad vives  
              select#slcCityProfile.custom-select.custom-select-sm.rounded-0.ml-2.border-top-0.border-left-0.border-right-0(ng-model="slcCityProfile" ng-options="obj.value as obj.label for obj in slcCityProfileItems")                
          .form-row.my-auto
            .col-12.mt-4.d-flex.justify-content-start
              small.p.my-auto Fecha de Nacimiento
              small.ml-2.my-auto
                input#iptBirthDate.form-control.phfield.form-control-sm.my-auto.text-center.datepicker-here.rounded-0.border-top-0.border-left-0.border-right-0(type='text', data-language='es', placeholder='Selecciona' ng-model="iptBirthDate")
              small.my-auto
                p.p.ml-5.my-auto Email
              input#iptEmailProfile.col-5.form-control.phfield.form-control-sm.ml-3.rounded-0.border-top-0.border-left-0.border-right-0(type='text', placeholder='' ng-model="iptEmailProfile")
              input(type="button" value="Revisar correo" ng-click="checkemailprofile()")       
              span(ng-show="emailprofilenotavailable") El correo electrónico no se encuentra disponible.
              span(ng-show="formatinvalid") El correo electrónico es invalido. 
              span(ng-show="emailavailable") El correo electrónico se encuentra disponible.      
          .row.my-auto
            .col-12.mt-4.d-flex.justify-content-between
              i.fab.phtext-muted.fa-twitter.my-auto
              input#iptTwitterUser.form-control.phfield.form-control-sm.ml-2.rounded-0.border-top-0.border-left-0.border-right-0(type='text', placeholder='@Twitter' ng-model="iptTwitterUser")
              i.fab.phtext-muted.fa-facebook-square.ml-3.my-auto
              input#iptFacebookUser.form-control.phfield.form-control-sm.ml-2.rounded-0.border-top-0.border-left-0.border-right-0(type='text', placeholder='URL de Facebook' ng-model="iptFacebookUser")
          .form-row.my-auto
            .col-12.mt-3.d-flex.justify-content-between
              i.fab.phtext-muted.fa-instagram.my-auto
              input#iptInstagramUser.form-control.phfield.form-control-sm.ml-2.rounded-0.border-top-0.border-left-0.border-right-0(type='text', placeholder='URL de Instagram' ng-model="iptInstagramUser")
              i.fab.phtext-muted.fa-linkedin.ml-3.my-auto
              input#iptLinkedinUser.form-control.phfield.form-control-sm.ml-1.rounded-0.border-top-0.border-left-0.border-right-0(type='text', placeholder='URL de LinkedIn' ng-model="iptLinkedinUser")
          .form-row.my-auto
            .col-12.mt-3.d-flex.justify-content-between
              i.fas.phtext-muted.fa-globe.my-auto
              input#iptWebPageUser.form-control.phfield.form-control-sm.ml-2.rounded-0.border-top-0.border-left-0.border-right-0(type='text', placeholder='Página Web' ng-model="iptWebPageUser")  
    .row.my-auto.text-right
      .col-12.justify-content-end.mt-5
        button.btn.phbtn-blue(ng-click="saveProfile(imgProfile)")
          i.fas.fa-save
          |  Guardar cambios
  // End of content
  include ../../endScripts

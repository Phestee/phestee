          li
            a.phtext-dark(href='')
              small Políticas de Privacidad
          li
            a.phtext-dark(href='')
              small Términos de Servicio
      .col.mt-3
        h6 Contacto
        ul.list-unstyled
          li
            a.phtext-dark(href='', data-toggle='modal', data-target='#phContact')

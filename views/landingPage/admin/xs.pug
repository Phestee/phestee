      .col.mt-3
        h6 Equipo
        ul.list-unstyled
          li
            a.phtext-dark(href='phconocenos.html')
              small Conócenos
          li.mt-3
            a(href='https://www.facebook.com/phestee/', target='_blank')
              i.fab.fa-facebook.text-muted.fa-sm
            a.ml-2(href='https://twitter.com/phesteeapp', target='_blank')
              i.fab.fa-twitter.text-muted.fa-sm
            a.ml-2(href='https://www.youtube.com/channel/UCiPsGwc99M1dqPjNIZ7OsCQ', target='_blank')
              i.fab.fa-youtube.text-muted.fa-sm

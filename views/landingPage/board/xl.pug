                  p.card-title.h3.phfont-lato.text-white Julia Orozco
                  p.card-text.h5.phfont-muli.text-white Freelancer
                  span.fa-layers.fa-fw
                    i.fas.fa-certificate.fa-1x
                    i.fa-inverse.fas.fa-check.phtext-blue(data-fa-transform='shrink-8')
                  i.text-white.fab.fa-facebook-square.fa-1x.ml-3
                  i.text-white.fab.fa-twitter.ml-3
                  i.text-white.fab.fa-instagram.ml-3
                  i.text-white.fas.fa-globe.ml-3
                .col-12.mt-4.d-flex.align-items-center.justify-content-between.animated.fadeInLeftShort.delay-250
                  .mx-auto
                    small.h4.font-weight-bold 45
                    p.p Clientes
                  .mx-auto
                    small.h4.font-weight-bold 155
                    p.p Seguidores
                  .mx-auto
                    small.h4.font-weight-bold 122
                    p.p Siguiendo
              ul.text-center.list-group.animatedParent.list-group-flush
                li.list-group-item.animated.fadeInUpShort.delay-1500.phbgn-transparent.border-light
                  i.fas.fa-check
                  |  Desarrollo y diseño Web
                  p.card-text.ml-1.text-truncate(style='max-width: auto;')
                    small.text-light #diseñoweb,#web,#desarrolloweb,#negocioweb,#iniciandonegocio
                li.list-group-item.animated.fadeInUpShort.delay-2000.phbgn-transparent.border-light
                  i.fas.fa-check
                  |  Paseo de mascota 
                  p.card-text.ml-1.text-truncate(style='max-width:auto;')
                    small.text-light #miperroestátriste,#pasearamiperro,#mascota,#miperritaestásola,
                li.list-group-item.animated.fadeInUpShort.delay-2500.phbgn-transparent.border-light
                  i.fas.fa-check
                  |  Fotógrafa Profesional 
                  p.card-text.ml-1.text-truncate(style='max-width: auto;')
                    small.text-light #fotografía,#XVaños,#boda,#modelaje,#grabarevento,#grabarboda

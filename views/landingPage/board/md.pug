              i.text-white.fab.fa-facebook-square.fa-sm.ml-2
              i.text-white.fab.fa-twitter.fa-sm.ml-2
              i.text-white.fab.fa-instagram.fa-sm.ml-2
              i.text-white.fas.fa-globe.fa-sm.ml-2
